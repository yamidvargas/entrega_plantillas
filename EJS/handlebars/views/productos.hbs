<h3 style="margin:2rem 0;"> Lista de Productos:</h3>
{{#if productos}}
    
    <table class="table table-bordered border-dark" style="margin:3rem 0;">
        <thead class="thead-dark" style="background-color:aliceblue ;">
            <tr>
                <th scope="col">articulo</th>
                <th scope="col">Precio</th>
                <th scope="col">Imagen</th>
            </tr>
        </thead>
        <tbody>
            {{#each productos}}

                <tr scope="row">
                    <td>
                            {{title}} 
                    </td>
                    <td>
                            {{price}}
                    </td>
                    <td>
                        <img src= {{thumbnail}}   alt= {{title}} style="width:3rem;">
                    </td>
                    
                </tr>  
            
            {{/each}}
        </tbody>
    </table>
    {{else }}
    <p style="color: red;">No hay ningun producto </p>
{{/if}}

<a href="/crear" class="btn btn-primary" >Crear nuevo Producto</a>